{% extends "base.html.twig" %}

{% block title %}Weakling{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="user-message">
            You are already logged in as {{ app.user.userIdentifier }}.
            <a class="quest-link" href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="dashboard-container">
        <header class="welcome-message">
            <h1>{{ message }}</h1>
        </header>
        <button class="quest-button" onclick="window.location.href='{{ quest }}';">Start your first quest</button>
    </div>
{% endblock %}
